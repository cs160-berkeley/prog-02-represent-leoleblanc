<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="86dp"
        android:id="@+id/modelPic"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ami_bera_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ami Bera"
        android:id="@+id/modelName"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Democrat"
        android:id="@+id/modelParty"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012 Vote View"
        android:id="@+id/modelButton"
        android:onClick="clickVoteView"
        android:layout_gravity="center_horizontal" />
</LinearLayout>